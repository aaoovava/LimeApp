<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35603C"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context=".LogActivity"
    >

    <ImageView
        android:id="@+id/imagebous"
        android:layout_width="325dp"
        android:layout_height="714dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704"
        app:srcCompat="@drawable/fon_sh" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:imeOptions="actionDone"
        android:lineHeight="24sp"
        android:text="Увійдіть в акаунт "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45.5dp"
        android:layout_height="153.57dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.253"
        app:srcCompat="@drawable/login_guy" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введіть свій номер та пароль"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/EditTextAge"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.486" />

    <EditText
        android:id="@+id/EditTextAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_edit"
        android:drawableLeft="@drawable/rectangle_7oki"
        android:drawablePadding="40dp"
        android:ems="10"
        android:textColorHint="@color/white"
        android:hint="(+380)..."

        android:inputType="phone"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.525" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="25dp"
        android:layout_height="29dp"
        app:layout_constraintBottom_toBottomOf="@+id/EditTextAge"
        app:layout_constraintEnd_toEndOf="@+id/EditTextAge"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/EditTextAge"
        app:layout_constraintTop_toTopOf="@+id/EditTextAge"
        app:srcCompat="@drawable/phone_icon" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_edit"
        android:drawableLeft="@drawable/rectangle_7oki"
        android:drawablePadding="40dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"
        android:text=""
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.654" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName2"
        app:srcCompat="@drawable/passimg" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butons_st"
        android:text="УВІЙТИ "
        android:backgroundTint="@color/green"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Немає акаунта? "
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.299"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/textREg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зареєструйтеся"
        android:textColor="#008816"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.922" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.74" />

</androidx.constraintlayout.widget.ConstraintLayout>

