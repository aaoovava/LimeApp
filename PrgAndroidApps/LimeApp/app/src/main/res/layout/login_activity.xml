<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #3ACB49"
    android:orientation="vertical"
    android:screenOrientation="landscape"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imagebous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|top"
        android:lineHeight="24sp"
        android:text="Увійдіть в акаунт "
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45.5dp"
        android:layout_height="153.57dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.253"
        app:srcCompat="@drawable/login_guy" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введіть свій айді та пароль"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_edit"
        android:drawableLeft="@drawable/rectangle_7oki"
        android:drawablePadding="40dp"
        android:ems="10"
        android:fontFamily="@font/abeezee"
        android:hint="ExampleId@1"

        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.525" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName"
        app:srcCompat="@drawable/vector" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_edit"
        android:drawableLeft="@drawable/rectangle_7oki"
        android:drawablePadding="40dp"
        android:ems="10"
        android:fontFamily="@font/abeezee"
        android:hint="password"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.654" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName2"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName2"
        app:srcCompat="@drawable/passimg" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butons_st"
        android:text="УВІЙТИ "
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.836" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Немає акаунта? "
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="@+id/imagebous"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.922" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зареєструйтеся"
        android:textColor="#008816"
        app:layout_constraintBottom_toBottomOf="@+id/imagebous"
        app:layout_constraintEnd_toEndOf="@+id/imagebous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imagebous"
        app:layout_constraintVertical_bias="0.922" />

</androidx.constraintlayout.widget.ConstraintLayout>

